<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Mongoose Dashboard</title>
    <link href="/css/style.css" rel="stylesheet">
		<link href='https://fonts.googleapis.com/css?family=Architects Daughter' rel='stylesheet'>
  </head>
  <body>

    <h1>Edit Animal</h1>

    <% for(var x = 0 ; x < animal.length ; x++){ %>
      <form class="" action="/animal/<%= animal[x]._id %>" method="post">
        <p>Name: <input type="text" name="name" value="<%= animal[x].name %>"></p>
        <p>Description: <input type="text" name="info" value="<%= animal[x].info %>"></p>
        <input type="submit" value="save">
      </form>
    <% } %>

    <a href="/">Home</a>

  </body>
</html>
